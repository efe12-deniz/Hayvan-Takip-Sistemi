<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaPlanRenk"
    tools:context=".hayvan_islemleri">

    <Button
        android:id="@+id/btnHayvansilme2"
        android:layout_width="80dp"
        android:layout_height="58dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="48dp"
        android:drawableLeft="@drawable/cikarma"
        android:text="Kotra Silme"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toEndOf="@+id/twHayvanSilme2"
        app:layout_constraintTop_toBottomOf="@+id/btnHayvansilme"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

    <TextView
        android:id="@+id/twHayvanSilme2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="104dp"
        android:text="Hayvan Kesim"
        android:textColor="@color/editTextRenk"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twHayvanSilme" />

    <TextView
        android:id="@+id/textView2Hayvan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="23dp"
        android:text="Lütfen Yapmak İstediğiniz İşlemi Seçiniz"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHayvanEkleme"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="46dp"
        android:drawableLeft="@drawable/ekleme"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnHayvansilme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toEndOf="@+id/twHayvanEkleme"
        app:layout_constraintTop_toBottomOf="@+id/textView2Hayvan"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

    <Button
        android:id="@+id/btnHayvansilme"
        android:layout_width="80dp"
        android:layout_height="58dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="48dp"
        android:drawableLeft="@drawable/cikarma"
        android:text="Kotra Silme"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toEndOf="@+id/twHayvanSilme"
        app:layout_constraintTop_toBottomOf="@+id/btnHayvanEkleme"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

    <TextView
        android:id="@+id/twHayvanEkleme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="92dp"
        android:text="Hayvan Alış"
        android:textColor="@color/editTextRenk"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2Hayvan" />

    <Button
        android:id="@+id/btnHayvanGuncelleme"
        android:layout_width="80dp"
        android:layout_height="58dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="48dp"
        android:drawableLeft="@drawable/guncelleme"
        android:text="Kotra Güncelleme"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toEndOf="@+id/twHayvanGuncelleme"
        app:layout_constraintTop_toBottomOf="@+id/btnHayvansilme2"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Material3.Button" />

    <TextView
        android:id="@+id/twHayvanSilme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="92dp"
        android:text="Hayvan Satış"
        android:textColor="@color/editTextRenk"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twHayvanEkleme" />

    <TextView
        android:id="@+id/twHayvanGuncelleme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:text="Hayvan Durum\nGüncellemesi"
        android:textColor="@color/editTextRenk"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twHayvanSilme2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="137dp"
        android:layout_height="132dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/inek" />

</androidx.constraintlayout.widget.ConstraintLayout>