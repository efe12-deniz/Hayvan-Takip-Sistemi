<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/arkaPlanRenk"
    tools:context=".kotraguncellemeislemi">

    <TextView
        android:id="@+id/twGuncelleme6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Lütfen Güncellemek İstediğiniz Bilgileri \n                         Doğru Giriniz"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etGuncelleme2"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edittextarkaplan"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/twGuncelleme3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/twGuncelleme3"
        app:layout_constraintTop_toTopOf="@+id/twGuncelleme3"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/twGuncelleme2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="48dp"
        android:text="Kotradaki \nhayvan Türü"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twGuncelleme1" />

    <EditText
        android:id="@+id/etGuncelleme1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/edittextarkaplan"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/twGuncelleme1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/twGuncelleme1"
        app:layout_constraintVertical_bias="0.388" />

    <TextView
        android:id="@+id/twGuncelleme3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:text="Kotradaki \nHayvan Sayısı"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twGuncelleme2" />

    <Spinner
        android:id="@+id/spGuncelleme1"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/twGuncelleme2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/twGuncelleme2"
        app:layout_constraintTop_toTopOf="@+id/twGuncelleme2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/twGuncelleme1"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="124dp"
        android:text="Kotra Adı"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twGuncelleme6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/btnkKotraKaydet"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginBottom="200dp"
        android:text="GÜNCELLE"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twGuncelleme3"
        app:layout_constraintVertical_bias="0.956" />

</androidx.constraintlayout.widget.ConstraintLayout>